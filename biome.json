{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": true,
		"include": [
			"**/*.ts",
			"**/*.tsx",
			"**/*.mjs",
			"**/*.cjs",
			"**/*.js",
			"**/*.jsx",
			"**/*.json",
			"**/*.css"
		],
		"ignore": [".turbo", "dist", "node_modules"]
	},
	"formatter": {
		"enabled": true,
		"useEditorconfig": true
	},
	"organizeImports": {
		"enabled": false
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"noNonNullAssertion": "off"
			},
			"suspicious": {
				"noConfusingVoidType": "off",
				"noExplicitAny": "off",
				"noThenProperty": "off",
				"noSelfCompare": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	}
}
